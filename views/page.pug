doctype html
html(lang='en')
    head
        link(rel='stylesheet' href='/css/style.css')
        title Header

    body
        #Page
            h1(class='page_title') #{page.title}
            //- p(class='inline') Search Score: #{page.searchscore.toFixed(2)}
            //- p(class='inline') Page Rank: #{page.pr.toFixed(2)}
            //- br
            //- br
            p(class='inline_close') Page URL: 
            a(href=page.url) #{page.url}
            if type == 'fruits'
                h2 Incoming Links (#{page.incomingLinks})
                each link in page.connectedPages 
                    a(href=link) #{link}
                    br
                h2 Outgoing Links (#{page.outgoingLinks})
                each link in page.connectedPages 
                    a(href=link) #{link}
                    br
            if type == 'personal'
                h2 Incoming Links (#{page.incomingLinks.length})
                each link in page.incomingLinks 
                    a(href=link) #{link}
                    br
                h2 Outgoing Links (#{page.outgoingLinks.length})
                each link in page.outgoingLinks 
                    a(href=link) #{link}
                    br
            h2 Word Frequency
            each count, word in page.wordCount
                p(class='inline2') (#{word}, #{count}), 